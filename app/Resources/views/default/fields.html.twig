{% extends 'form_div_layout.html.twig' %}

{% block enigmatic_city_widget %}
    {% spaceless %}
        <input type="text" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}"{% endif %} style="display:none;"/>
        {{ render(controller('EnigmaticCityBundle:Default:getFormSearch', {'id_form_city': id, 'default_value':value })) }}
    {% endspaceless %}
{% endblock %}

{% block form_widget_simple_placeholder %}
    {% spaceless %}
        {% set type = type|default('text') %}
        <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
        {% if required %}
            <span class="required" title="{% trans %}Required{% endtrans %}">*</span>
        {% endif %}
    {% endspaceless %}
{% endblock %}

{% block form_row %}
    {% spaceless %}
        <div class="form_row">
            {{ form_label(form) }}
            {{ form_widget(form) }}
            {{ form_errors(form) }}
        </div>
    {% endspaceless %}
{% endblock %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <br/>
            <span class="text_error">
                {% for error in errors %}
                    {{ error.messagePluralization is null
                    ? error.messageTemplate|trans(error.messageParameters, 'validators')
                    : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators') }}
                {% endfor %}
            </span>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block choice_widget_expanded %}
    <div {{ block('widget_container_attributes') }}>
        {%- for child in form %}
            <div class="form_choice">
                {{- form_widget(child) -}}
                <span class="{% if multiple %}checkbox{% else %}radio{% endif %}">
            {{- form_label(child) -}}
            </span>
            </div>
        {% endfor -%}
    </div>
{% endblock choice_widget_expanded %}

